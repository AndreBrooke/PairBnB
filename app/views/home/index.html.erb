

    <!-- Page Content -->
    <div class="container">
    
      <!-- Jumbotron Header -->
      <header class="jumbotron my-4">
        <h1 class="display-3">Airbnb</h1>
        <p class="lead">Search for accomodation for your next trip!</p>
        <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search..", :required => 'required' %>
        
            <%= text_field_tag :city, params[:filter], placeholder: "city" %>
            <%= number_field_tag :min_stay, params[:filter], placeholder: "1" %>
            <%= number_field_tag :number_of_rooms, params[:filter], placeholder: "1" %> <br>
            <%= range_field_tag :rent, nil, {min: 100, max: 1000, :step => 10, value: params[:filter], id:"myRange" }%>
            <p> Price: <span id="myValue"></span></p> 
            <%= submit_tag "Search", :name => nil %>
        <% end %>
        <a href="#" class="btn btn-primary btn-lg">Find your dream destination</a>
      </header>

      <!-- Page Features -->
      <div class="row text-center">
      <% for i in 1..4 %>
        <% if Listing.all[i] != nil %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card">
          	
            <img class="card-img-top" src="http://via.placeholder.com/250x150" alt="">
            <div class="card-body">
              <h4 class="card-title"><%= Listing.find(i).listing_name%></h4>
              <p class="card-text"></p>
            </div>
            <div class="card-footer">
              <%= link_to 'Find Out More!', listing_path(i), class:"btn btn-primary" %>
            </div>
          </div>
        </div>

		<% end%>
    <%end %>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
      </div>
      <!-- /.container -->
    </footer>

   

  </body>

</html>

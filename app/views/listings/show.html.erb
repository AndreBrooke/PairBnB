
<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class= "col-md-8 col-md-offset-2">
				<%= image_tag @listing.images[0].url, class: "img-responsive" if @listing.images[0] != nil %>
			</div>
		</div>
		<!-- Main Info -->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-3 text-center">
						<% if @listing.user.avatar.url %>
						<%= image_tag @listing.user.avatar.url, class: "img-circle avatar-large" %>
						<% end %>
						<br/><br/>
						
						<%= @listing.user.first_name %> <%= @listing.user.last_name %>
					</div>
					<div class="col-md-9">
						<h4><%= @listing.listing_name %></h4>
						<%= @listing.address %>

						<div class="row text-centre row-space-1">
							<div class="col-sm-3">
								<i class="fa fa-home fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-user fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-bed fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-ship fa-2x"></i>
							</div>
						</div>
						<div class="row text-centre row-space-1">
							<div class="col-sm-3">
								<%= @listing.number_of_rooms %> 
								<% if @listing.number_of_rooms != nil%>
								<%= @listing.number_of_rooms > 1 ? "Guests":"Guest"  %>
								<% end %>
							</div>
							<div class="col-sm-3">
								<%= @listing.min_stay %>
								<% if @listing.min_stay != nil %>
								 <%= @listing.min_stay > 1 ? "Days":"Days"  %>
								 <% end %>
							</div>
							
						</div>

					</div>
				</div>
			</div>
			<div class="col-md-4">
				<!-- Reservation form <-->
				<%= render 'bookings/form' %>
				

			</div>

		</div>
		<input type="text" class ="daterange"/>
		
		<!-- About -->
		<div class="row">
			<div class="col-md-12">
				<h2>About This Listing</h2>
				<p><%= @listing.description%></p>
			</div>
		</div>

		<!-- Amenities -->
		<div class="row">
			<div class="col-md-2">
				<h2>Room Type</h2>
			</div>
			<div class="row">
				<div class="col-md-10">
					<div class="row">
						<div class="col-md-6">
							<ul class="room-type">
								<li class="<%= 'text-line-through' unless @listing.private_room%>">Private Room</li>
								<li class="<%= 'text-line-through' unless @listing.shared_room%>">Shared Room</li>
								<li class="<%= 'text-line-through' unless @listing.entire_house%>">Entire House</li>	
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
					<% if @listing.images %>
						<ol class="carousel-indicators">
							<% for i in 0..(@listing.images.count - 1) %>
								<li data-target="#myCarousel" data-slide-to= "i" class="<%= 'active' if i == 0 %>"</li>
							<% end %>
						</ol>
					<% end %>
						<div class="carousel-inner" role="listbox">
							<% if @listing.images %>
								<% for i in 0..(@listing.images.count - 1) %>
									<div class="item <%= 'active' if i == 0%>">
										<%= image_tag @listing.images[i].url %>
									</div>
								<% end %>
							<% end %>
						</div>

						<a class="left carousel-control" href="#myCarousel" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#myCarousel" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
							<span class="sr-only">Next</span>
						</a>	

				</div>		
			</div>
		</div>
		<br/>
		<hr>
	</div>
</div>
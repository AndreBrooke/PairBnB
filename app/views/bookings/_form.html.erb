<%= form_for([@listing, @listing.bookings.new]) do |f| %>

	
	<div class="row">
		<div class="col-md-6">
			<label>Check In</label>
			<%= f.text_field :check_in, id:'dp1', placeholder: 'Check-In', class: 'form-control clickable input-md' %>
		
		</div>
		<div class="col-md-6">
			<label>Check Out</label>
			<%= f.text_field :check_out, id: 'dp2', placeholder: "Check-Out", class: 'form-control clickable input-md', disabled:'true' %>
			
		</div>
	</div>

	<%= f.hidden_field :listing_id, value: @listing_id %>
	<%= f.hidden_field :rent, value: @listing.rent %>
	<%= f.hidden_field :total, value: 'booking_total' %>

	<div id="preview" style = "display:none;">
		<h4><span id="message"></span></h4>
		<table class = "booking-table">
			<tbody>
					<tr>
						<td>Day(s)</td>
						<td><span id="booking_days"></span></td>
					</tr>
					<tr>
						<td>Total</td>
						<td><span id="bookingion_sum"></span></td>
					</tr>
			</tbody>
		</table>
	</div>

	<br/>
	<%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>


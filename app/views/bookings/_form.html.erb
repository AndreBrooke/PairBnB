<%= form_for([@listing, @listing.bookings.new]) do |f| %>

	<div class="row">
		<div class="col-md-6">
			<label>Check In</label>
			<%= f.text_field :check_in, placeholder: 'Start Date', class: 'datepicker'%>
		</div>
		<div class="col-md-6">
			<label>Check Out</label>
			<%= f.text_field :check_out, placeholder: "End Date", class: 'datepicker' %>
		</div>
	</div>

	<%= f.hidden_field :listing_id, value: @listing_id %>
	<%= f.hidden_field :rent, value: @listing.rent %>
	<%= f.hidden_field :total, value: 'reservation_total' %>

	<div id="preview" style = "display:none;">
		<h4><span id="message"></span></h4>
		<table class = "reservation-table">
			<tbody>
					<tr>
						<td>Day(s)</td>
						<td><span id="reservation_days"></span></td>
					</tr>
					<tr>
						<td>Total</td>
						<td><span id="reservation_sum"></span></td>
					</tr>
			</tbody>
		</table>
	</div>

	<br/>
	<%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>

